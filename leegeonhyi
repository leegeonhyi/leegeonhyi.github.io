    <script>
        $(document).ready(function() {
            $('.middle').addClass('hidden')
            $('.high').addClass('hidden')
        })
        function homeClick() {
            $('.high').addClass('hidden')
            $('.middle').addClass('hidden')
            $('.home').removeClass('hidden')
        }
        function middleClick() {
            $('.home').addClass('hidden')
            $('.high').addClass('hidden')
            $('.middle').removeClass('hidden')
        }
        function highClick() {
            $('.middle').addClass('hidden')
            $('.home').addClass('hidden')
            $('.high').removeClass('hidden')
        }
    </script>
